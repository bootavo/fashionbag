<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fourth_text"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_picture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/white"
                app:civ_border_overlay="false"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@+id/iv_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="11dp"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/title"
                android:textStyle="normal"
                android:layout_marginTop="15dp"/>


            <View
                android:id="@+id/v_1"
                android:layout_below="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_below="@+id/v_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_cells"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/btn_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Mi perfil"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_20"
                android:layout_below="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"/>

            <RelativeLayout
                android:id="@+id/rl_weight"
                android:layout_below="@+id/v_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_cells"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/btn_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Mis reservas"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_2"
                android:layout_below="@+id/rl_weight"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"/>

            <RelativeLayout
                android:id="@+id/rl_gender"
                android:layout_below="@+id/v_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_cells"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/btn_subscriptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Contactar con FashionBag"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            </RelativeLayout>

            <View
                android:id="@+id/v_3"
                android:layout_below="@+id/rl_gender"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"/>

            <View
                android:id="@+id/v_4"
                android:layout_below="@+id/v_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_share_us"
                android:layout_below="@+id/v_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_cells"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/btn_share_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Compartir la Aplicación"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_5"
                android:layout_below="@+id/rl_share_us"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"/>

            <View
                android:id="@+id/v_6"
                android:layout_below="@+id/v_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_terms_conditions"
                android:layout_below="@+id/v_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_cells"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/btn_terms_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Términos y condiciones"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_7"
                android:layout_below="@+id/rl_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"/>

            <RelativeLayout
                android:id="@+id/rl_change_password"
                android:layout_below="@+id/v_7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_cells"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/btn_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Cambiar contraseña"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_8"
                android:layout_below="@+id/rl_change_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"/>

            <View
                android:id="@+id/v_9"
                android:layout_below="@+id/v_8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_about_midoc"
                android:layout_below="@+id/v_9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_cells"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/btn_about_midoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Acerca de FashionBag"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/content"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_10"
                android:layout_below="@+id/rl_about_midoc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="@color/secondary_text"/>

            <RelativeLayout
                android:id="@+id/rl_contact_us"
                android:layout_below="@+id/v_10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btn_contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Contáctanos"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>